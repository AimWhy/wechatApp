
.banner{
  width: 100%;
  height: 350rpx;
}
.banner image{
  width: 100%;
  height: 350rpx;
}

.nav-block{
  padding: 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.nav-item{
  text-align: center;
  width: 100rpx;
  background-color: #efefef;
  margin: 10rpx;
  padding: 6rpx;
}

.nav-active{
  background-color: #42c642;
}

.poem-item{
  text-align: center;
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid #efefef;
}
.poem-title{
  font-size: 48rpx;
  margin-bottom: 20rpx;
}
.poem-verse{
  margin-top: 10rpx;
  font-size: 32rpx;
}