.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0rpx 30rpx;
  background: #F6F6F6;
}

.banner {
  margin-top: 10rpx;
  width: 100%;
  height: 320rpx;
  text-align: center;
}

.banner image {
  width: 100%;
  height: 320rpx;
  border-radius: 6rpx;
}

.interview {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  margin-top: 40rpx;
  width: 100%;
}

.interview image {
  border-radius: 6rpx;
  width: 335rpx;
  height: 165rpx;
}

.category {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 60rpx;
  width: 95%;
  flex-wrap: wrap;
}

.c-item {
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  justify-content: center;
  width: 33.3%;
  height: 150rpx;
  margin-bottom: 30rpx;
}

.category image {
  width: 50rpx;
  height: 50rpx;
}

.c-name {
  font-size: 24rpx;
  margin-top: 6rpx;
}

.promp-block {
  padding: 20rpx;
  margin-top: 30rpx;
}

.title-block {
  display: flex;
  flex-direction: row;
}

.title {
  font-weight: bold;
  padding: 15rpx 20rpx;
  font-size: 32rpx;
}

.cur-title {
  color: #1aad19;
  border-bottom: 4rpx solid #1aad19;
}

.promp-sv {
  box-shadow: 0 0 5px #ddd;
  padding: 5rpx;
}

.promp {
  width: 100%;
  white-space: nowrap;
}

.p-item {
  width: 180rpx;
  height: 180rpx;
  background-color: #eee;
  margin: 10rpx;
  display: inline-block;
}

.p-item image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 6rpx;
}

.p-item view {
  text-align: center;
  font-size: 26rpx;
  width: 180rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.image-block {
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
}

.image-block image {
  width: 100%;
  border-radius: 5rpx;
}

.share-btn-block {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  flex-direction: row;
  margin: 0rpx;
  margin-top: 30rpx;
}

.search-group {
  margin-top: 70rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.search-group button {
  border-radius: 0px;
  border-top-right-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
}

.search-group input {
  border: 1rpx solid #dbdbdb;
  background-color: #FFF;
  flex: 1;
  padding-left: 15rpx;
  border-top-left-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
}